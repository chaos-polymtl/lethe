# Listing of Parameters
# ---------------------

# --------------------------------------------------
# Simulation Control
#---------------------------------------------------

subsection simulation control
  set method            = steady
  set number mesh adapt = 1
  set output name       = output
  set output frequency  = 0
  set log precision     = 4
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = subdivided_hyper_rectangle
  set grid arguments     = 1,1,1: -4,-4,-4 : 4,4,4  : true
  set initial refinement = 3
end

# --------------------------------------------------
# Boundary Conditions
#---------------------------------------------------

subsection boundary conditions
  set number = 3
  subsection bc 0
    set id   = 0
    set type = function
    subsection u
      set Function expression = 1
    end
    subsection v
      set Function expression = 0
    end
    subsection w
      set Function expression = 0
    end
  end
  subsection bc 1
    set id   = 2
    set type = slip
  end
  subsection bc 2
    set id   = 3
    set type = slip
  end
end

# --------------------------------------------------
# IB particules
#---------------------------------------------------

subsection particles
  set number of particles                     = 2
  set assemble Navier-Stokes inside particles = false
  set levels not precalculated                = 0

  subsection extrapolation function
    set stencil order = 2
  end

  subsection input file
    set load particles from file = false
    set particles file           = particles.input
  end

  subsection local mesh refinement
    set initial refinement                = 1
    set refine mesh inside radius factor  = 0.7
    set refine mesh outside radius factor = 1.5
  end

  subsection particle info 0
    set type            = cone
    set shape arguments = 1; 1.5
    subsection position
      set Function expression = 0.01;-2.01;0.01
    end
  end
  subsection particle info 1
    set type            = death star
    set shape arguments = 1.5; 1.5; 2
    subsection position
      set Function expression = 0.01;2.01;0.01
    end
    subsection orientation
      set Function expression = 1;1;1
    end
  end
end

# --------------------------------------------------
# Forces
#---------------------------------------------------

subsection forces
  set verbosity = verbose
end

# --------------------------------------------------
# Mesh Adaptation Control
#---------------------------------------------------

subsection mesh adaptation
  set type                 = kelly
  set variable             = pressure
  set fraction type        = number
  set max number elements  = 200000
  set max refinement level = 7
  set min refinement level = 3
  set frequency            = 1
  set fraction refinement  = 0.3
  set fraction coarsening  = 0.1
end

# --------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  set verbosity = quiet
end

# --------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  set verbosity = quiet
end
