# Listing of Parameters
# ---------------------


# --------------------------------------------------
# Simulation Control
#---------------------------------------------------
subsection simulation control
  set method                  = steady
  set number mesh adapt       = 0
  set output name             = sphere_23
  set output frequency        = 1
  set subdivision             = 1
end
#---------------------------------------------------
# FEM
#---------------------------------------------------
subsection FEM
    set velocity order        = 1
    set pressure order        = 1
end
#---------------------------------------------------
# Timer
#---------------------------------------------------
subsection timer
    set type    = iteration                                  # <none|iteration|end>
end
#---------------------------------------------------
# Force
#---------------------------------------------------
subsection forces
    set verbosity             = verbose
    set calculate forces      = true
    set calculate torques     = false
    set force name            = force
    set torque name           = torque
    set output precision      = 10
    set display precision     = 6
    set calculation frequency = 1
    set output frequency      = 1
end
#---------------------------------------------------
# Physical Properties
#---------------------------------------------------
subsection physical properties
    set kinematic viscosity            = 1.0000
end
#---------------------------------------------------
# Mesh
#---------------------------------------------------
subsection mesh
    set type                 = dealii
    set grid type            = hyper_cube
    set grid arguments	     = -2 : 2 : true
    set initial refinement   = 4
end

#---------------------------------------------------
# Nitsche
#---------------------------------------------------
subsection nitsche
    subsection mesh
	set type                 = gmsh
	set file name		 = sphere_33.msh
    end
    set beta = 5
end


# --------------------------------------------------
# Boundary Conditions
#---------------------------------------------------
subsection boundary conditions
  set number                  = 5
    subsection bc 0
        set type              = slip
    end
    subsection bc 1
        set type              = slip
    end
    subsection bc 2
        set type              = slip
    end
    subsection bc 3
        set type              = slip
    end
    subsection bc 4
	set type              = function
        subsection u
            set Function expression = 0
        end
        subsection v
            set Function expression = 0
        end
        subsection w
            set Function expression = 1
        end
    end
end

# --------------------------------------------------
# Post-Processing
#---------------------------------------------------
subsection post-processing
  # Output the boundaries of the domain
  set output boundaries        = true
end

# --------------------------------------------------
# Mesh Adaptation Control
#---------------------------------------------------
subsection mesh adaptation
  set type                    = kelly
  set variable                = velocity
  set fraction type           = number
  set max number elements     = 70000
  set max refinement level    = 5
  set min refinement level    = 0
  set frequency               = 1
  set fraction refinement     = 0.3
  set fraction coarsening     = 0.1
end

# --------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------
subsection non-linear solver
  set verbosity               = verbose
  set tolerance               = 1e-2
  set max iterations          = 10
end

# --------------------------------------------------
# Linear Solver Control
#---------------------------------------------------
subsection linear solver
  set verbosity               = verbose
  set method                  = gmres
  set max iters               = 5000
  set relative residual       = 1e-2
  set minimum residual        = 1e-9
  set ilu preconditioner fill = 0
  set ilu preconditioner absolute tolerance = 1e-8
  set ilu preconditioner relative tolerance = 1.00
end
