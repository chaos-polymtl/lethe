# Listing of Parameters
#----------------------

set dimension = 2

#---------------------------------------------------
# Simulation Control
#---------------------------------------------------

subsection simulation control
  set method      = bdf1
  set time step   = 0.2
  set time end    = 0.6
  set output name = couette_mortar
  set subdivision = 2
end

#---------------------------------------------------
# FEM
#---------------------------------------------------

subsection FEM
  set velocity order = 2
  set pressure order = 1
end

#---------------------------------------------------
# Physical Properties
#---------------------------------------------------

subsection physical properties
  subsection fluid 0
    set kinematic viscosity = 0.5
  end
end

#---------------------------------------------------
# Forces
#---------------------------------------------------

subsection forces
  set verbosity        = verbose
  set calculate torque = true
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = hyper_shell
  set grid arguments     = 0, 0 : 0.5 : 1.0 : 4 : true
  set initial refinement = 3
end

#---------------------------------------------------
# Mortar
#---------------------------------------------------

subsection mortar
  set enable = true
  subsection mesh
    set type               = dealii
    set grid type          = hyper_shell
    set grid arguments     = 0, 0 : 0.25 : 0.5 : 4 : true
    set initial refinement = 3
  end
  set rotor boundary id  = 3
  set stator boundary id = 0
  subsection rotor rotation angle
    set Function expression = 2*t
  end
  subsection rotor angular velocity
    set Function expression = 2
  end
  set penalty factor = 1
  set verbosity      = verbose
end

#---------------------------------------------------
# Boundary Conditions
#---------------------------------------------------

subsection boundary conditions
  set number                = 4
  set fix pressure constant = false
  subsection bc 0
    set id   = 0
    set type = none
  end
  subsection bc 1
    set id   = 1
    set type = noslip
  end
  subsection bc 2
    set id   = 2
    set type = function weak
    subsection u
      set Function expression = -y
    end
    subsection v
      set Function expression = x
    end
  end
  subsection bc 3
    set id   = 3
    set type = none
  end
end

#---------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  subsection fluid dynamics
    set tolerance          = 1e-10
    set max iterations     = 10
    set residual precision = 2
    set verbosity          = quiet
  end
end

#---------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  subsection fluid dynamics
    set method            = gmres
    set relative residual = 1e-4
    set minimum residual  = 1e-11
    set preconditioner    = amg
    set verbosity         = quiet
  end
end
