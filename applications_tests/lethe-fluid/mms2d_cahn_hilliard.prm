# Listing of Parameters
#----------------------

set dimension = 2

#---------------------------------------------------
# Simulation Control
#---------------------------------------------------

subsection simulation control
  set method            = steady
  set number mesh adapt = 3
  set output frequency  = 0
end

#---------------------------------------------------
# Multiphysics
#---------------------------------------------------

subsection multiphysics
  set cahn hilliard  = true
  set fluid dynamics = false
end

#---------------------------------------------------
# Analytical solution
#---------------------------------------------------

subsection analytical solution
  set enable    = true
  set verbosity = verbose

  subsection cahn hilliard
    set Function expression = -sin(pi*x)*sin(pi*y); 1/0.0 # This is to make the test more robust on every configuration. Only the phase (first component) is being tested, the potential is not tested, the numerical solution converges to zero extremely fast.
  end
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = hyper_cube
  set grid arguments     = -1 : 1 : true
  set initial refinement = 4
end

#---------------------------------------------------
# Mesh Adaptation Control
#---------------------------------------------------

subsection mesh adaptation
  set type = uniform
end

#---------------------------------------------------
# Cahn Hilliard
#---------------------------------------------------

subsection cahn hilliard
  set potential smoothing coefficient = 0.0

  subsection epsilon
    set method = manual
    set value  = 1
  end
end

#---------------------------------------------------
# Physical properties
#---------------------------------------------------

subsection physical properties
  set number of fluids = 2
  set number of material interactions = 1
  subsection material interaction 0
    subsection fluid-fluid interaction
      set surface tension coefficient     = 1
    end
  end
end

#---------------------------------------------------
# Source term
#---------------------------------------------------

subsection source term
  subsection cahn hilliard
    set Function expression = 0;3/(2.0*sqrt(2.0)) *(sin(pi*x)^3*sin(pi*y)^3 - sin(pi*x)*sin(pi*y)) + 3/(2.0*sqrt(2.0)) *2*pi*pi*sin(pi*x)*sin(pi*y)
  end
end

#---------------------------------------------------
# Boundary conditions Cahn-Hilliard
#---------------------------------------------------

subsection boundary conditions
  set number = 4
  subsection bc 0 
    set id    = 0
    set type  = noslip
  end
  subsection bc 1
    set id    = 1
    set type  = noslip
  end
  subsection bc 2
    set id    = 2
    set type  = noslip
  end
  subsection bc 3
    set id    = 3
    set type  = noslip
  end
end

subsection boundary conditions cahn hilliard
  set number = 4
  subsection bc 0
    set id   = 0
    set type = dirichlet
    subsection phi
      set Function expression = 0
    end
  end
  subsection bc 1
    set id   = 1
    set type = dirichlet
    subsection phi
      set Function expression = 0
    end
  end
  subsection bc 2
    set id   = 2
    set type = dirichlet
    subsection phi
      set Function expression = 0
    end
  end
  subsection bc 3
    set id   = 3
    set type = dirichlet
    subsection phi
      set Function expression = 0
    end
  end
end

#---------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  subsection cahn hilliard
    set tolerance = 1e-7
    set verbosity = quiet
  end
  subsection fluid dynamics
    set tolerance = 1e-7
    set verbosity = quiet
  end
end

#---------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  subsection cahn hilliard
    set verbosity = quiet
  end
  subsection fluid dynamics
    set verbosity = quiet
  end
end
