# Listing of Parameters
#----------------------

set dimension = 2

#---------------------------------------------------
# Simulation Control
#---------------------------------------------------

subsection simulation control
  set method           = bdf1
  set output name      = cahn_hilliard_navier_stokes
  set output frequency = 0
  set time end         = 0.005
  set time step        = 0.001
end

#---------------------------------------------------
# Multiphysics
#---------------------------------------------------

subsection multiphysics
  set cahn hilliard  = true
end

#---------------------------------------------------
# Cahn-Hilliard order
#---------------------------------------------------

subsection FEM
  set phase cahn hilliard order     = 1
  set potential cahn hilliard order = 1
  set velocity order                = 1
  set pressure order                = 1
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = hyper_cube
  set grid arguments     = 0 : 1 : true
  set initial refinement = 5
end

#---------------------------------------------------
# Cahn Hilliard
#---------------------------------------------------

subsection cahn hilliard
  set potential smoothing coefficient = 0.5

  subsection epsilon
    set method = automatic
  end
end

#---------------------------------------------------
# Boundary conditions Cahn-Hilliard
#---------------------------------------------------

subsection boundary conditions cahn hilliard
  set number = 2
  subsection bc 0
    set id          = 0
    set type        = angle_of_contact
    set angle value = 110
  end
  subsection bc 1
    set id   = 2
    set type = free_angle
  end
end

#---------------------------------------------------
# Boundary conditions
#---------------------------------------------------

subsection boundary conditions
  set number = 4
  subsection bc 0
    set id   = 0
    set type = slip
  end
  subsection bc 1
    set id   = 1
    set type = slip
  end
  subsection bc 2
    set id   = 2
    set type = slip
  end
  subsection bc 3
    set id   = 3
    set type = slip
  end
end

#---------------------------------------------------
# Initial conditions
#---------------------------------------------------

subsection initial conditions
  set type = nodal

  subsection cahn hilliard
    set Function expression = if( x*x + y*y <0.3*0.3,-1,1);0
  end
end

#---------------------------------------------------
# Physical properties
#---------------------------------------------------

subsection physical properties
  set number of fluids                = 2
  set number of material interactions = 1
  subsection material interaction 0
    set type = fluid-fluid
    subsection fluid-fluid interaction
      set first fluid id  = 0
      set second fluid id = 1

      # Surface tension
      set surface tension model       = constant
      set surface tension coefficient = 1

      # Mobility Cahn-Hilliard
      set cahn hilliard mobility model    = constant
      set cahn hilliard mobility constant = 1e-2
    end
  end
end

#---------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  subsection fluid dynamics
    set verbosity = quiet
  end
  subsection cahn hilliard
    set verbosity = quiet
  end
end

#---------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  subsection fluid dynamics
    set verbosity = quiet
  end
  subsection cahn hilliard
    set verbosity = quiet
  end
end
