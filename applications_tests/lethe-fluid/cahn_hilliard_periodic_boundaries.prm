# This test verifies the periodic boundary conditions of the Cahn-Hilliard solver by monitoring the position of the barycenter.
# The barycenter should move along the x-axis then come back to lower values when the initial drop goes through the periodic boundary.

# Listing of Parameters
# ---------------------

set dimension = 2

# Simulation and IO Control
#---------------------------------------------------

subsection simulation control
  set method           = bdf1
  set output name      = periodic
  set output frequency = 0
  set time end         = 2
  set time step        = 0.1
end

#---------------------------------------------------
# Multiphysics
#---------------------------------------------------

subsection multiphysics
  set fluid dynamics = true
  set cahn hilliard  = true
end

#---------------------------------------------------
# Dimensionality
#---------------------------------------------------

subsection dimensionality
  set length = 0.001
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = hyper_rectangle
  set grid arguments     = -1, -1 : 1, 1 : true
  set initial refinement = 3
end

#---------------------------------------------------
# Mesh Adaptation
#---------------------------------------------------

subsection mesh adaptation
  set type                     = kelly
  set variable                 = phase_cahn_hilliard
  set fraction type            = fraction
  set max refinement level     = 5
  set min refinement level     = 2
  set frequency                = 1
  set fraction refinement      = 0.99
  set fraction coarsening      = 0.01
  set initial refinement steps = 2
end

#---------------------------------------------------
# Post-processing
#---------------------------------------------------

subsection post-processing
  set verbosity        = verbose
  set output frequency = 1

  set calculate barycenter = true
end

#---------------------------------------------------
# Physical Properties
#---------------------------------------------------

subsection physical properties
  set number of fluids                = 2
  set number of material interactions = 1
  subsection fluid 0 # (phase = 1)
    set kinematic viscosity = 1e-2
    set density             = 1.23
  end
  subsection fluid 1 # (phase = -1)
    set kinematic viscosity = 1e-2
    set density             = 1.23
  end
  subsection material interaction 0
    subsection fluid-fluid interaction
      set surface tension coefficient     = 0
      set cahn hilliard mobility constant = 1e-6
    end
  end
end

#---------------------------------------------------
# Cahn Hilliard
#---------------------------------------------------

subsection cahn hilliard
  set potential smoothing coefficient = 0

  subsection epsilon
    set method    = automatic
    set verbosity = quiet
  end
end

#---------------------------------------------------
# Boundary conditions Cahn-Hilliard
#---------------------------------------------------

subsection boundary conditions cahn hilliard
  set number = 2
  subsection bc 0
    set id                 = 0
    set type               = periodic
    set periodic id        = 1
    set periodic direction = 0
  end
  subsection bc 1
    set id                 = 2
    set type               = periodic
    set periodic id        = 3
    set periodic direction = 1
  end
end

#---------------------------------------------------
# Boundary conditions
#---------------------------------------------------

subsection boundary conditions
  set number = 4
  subsection bc 0
    set id   = 0
    set type = function
    subsection u
      set Function expression = 1 * (1-y*y)
    end
  end
  subsection bc 1
    set id   = 1
    set type = outlet
  end
  subsection bc 2
    set id   = 2
    set type = noslip
  end
  subsection bc 3
    set id   = 3
    set type = noslip
  end
end

#---------------------------------------------------
# Initial conditions
#---------------------------------------------------

subsection initial conditions
  subsection uvwp
    set Function expression = 0;0;0
  end
  subsection cahn hilliard
    set Function expression = if(x*x + y*y < 0.25,-1,+1);0
  end
end

# --------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  subsection fluid dynamics
    set verbosity      = quiet
    set tolerance      = 1e-6
    set max iterations = 20
  end
  subsection cahn hilliard
    set verbosity      = quiet
    set tolerance      = 1e-6
    set max iterations = 20
  end
end

# --------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  subsection fluid dynamics
    set verbosity               = quiet
    set max iters               = 500
    set relative residual       = 1e-2
    set minimum residual        = 1e-7
    set ilu preconditioner fill = 1
    set max krylov vectors      = 300
  end
  subsection cahn hilliard
    set verbosity               = quiet
    set max iters               = 500
    set relative residual       = 1e-2
    set minimum residual        = 1e-7
    set ilu preconditioner fill = 1
    set max krylov vectors      = 300
  end
end
