# Listing of Parameters
#----------------------

set dimension = 2

#---------------------------------------------------
# Simulation Control
#---------------------------------------------------

subsection simulation control
  set method                         = bdf2
  set output frequency               = 0
  set time end                       = 8e-6
  set time step                      = 2e-7
  set max cfl                        = 0.75
  set max time step                  = 2e-7
  set adapt time-step to respect CFL = true
end

#---------------------------------------------------
# Multiphysics
#---------------------------------------------------

subsection multiphysics
  set VOF           = true
  set heat transfer = true
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = gmsh
  set file name          = ../../lpbf_benchmark_mesh.msh
  set initial refinement = 3
end

#---------------------------------------------------
# Boundary Conditions
#---------------------------------------------------

subsection boundary conditions
  set number = 6
  subsection bc 0
    set id   = 2
    set type = noslip
  end
  subsection bc 1
    set id   = 5
    set type = noslip
  end
  subsection bc 2
    set id   = 6
    set type = outlet
  end
  subsection bc 3
    set id   = 7
    set type = slip
  end
  subsection bc 4
    set id   = 4
    set type = function
    subsection u
      set Function expression = 0.1
    end
    subsection v
      set Function expression = 0
    end
  end
  subsection bc 5
    set id   = 3
    set type = noslip
  end
end

subsection boundary conditions heat transfer
  set number = 6
  subsection bc 0
    set id   = 2
    set type = temperature
    subsection value
      set Function expression = 298
    end
  end
  subsection bc 1
    set id   = 5
    set type = noflux
  end
  subsection bc 2
    set id   = 6
    set type = noflux
  end
  subsection bc 3
    set id   = 7
    set type = noflux
  end
  subsection bc 4
    set id   = 4
    set type = temperature
    subsection value
      set Function expression = 298
    end
  end
  subsection bc 5
    set id   = 3
    set type = noflux
  end
end

subsection boundary conditions VOF
  set number = 6
  subsection bc 0
    set id = 2
  end
  subsection bc 1
    set id = 5
  end
  subsection bc 2
    set id = 6
  end
  subsection bc 3
    set id = 7
  end
  subsection bc 4
    set id = 4
  end
  subsection bc 5
    set id = 3
  end
end

#---------------------------------------------------
# Initial condition
#---------------------------------------------------

subsection initial conditions
  subsection VOF
    set Function expression = if (y<0.43 , 1, 0)
  end
  subsection temperature
    set Function expression = 298
  end
end

#---------------------------------------------------
# Physical Properties
#---------------------------------------------------

subsection physical properties
  set number of fluids = 2
  subsection fluid 1
    set density = 4420e-9

    set thermal conductivity model = phase_change
    set thermal expansion model    = phase_change
    set rheological model          = phase_change
    set specific heat model        = phase_change

    subsection phase change
      set latent enthalpy             = 290000e6
      set liquidus temperature        = 1928.0
      set solidus temperature         = 1878.0
      set viscosity liquid            = 0.905
      set viscosity solid             = 90500
      set thermal conductivity liquid = 28.8e3
      set thermal conductivity solid  = 28.8e3
      set specific heat liquid        = 1126e6
      set specific heat solid         = 800e6
    end
  end

  subsection fluid 0
    set density              = 1.784e-9
    set kinematic viscosity  = 56.1
    set thermal conductivity = 0.018e3
    set specific heat        = 520e6
  end

  set number of material interactions = 1
  subsection material interaction 0
    set type = fluid-fluid
    subsection fluid-fluid interaction
      set surface tension model                       = phase change
      set surface tension coefficient                 = 1.52
      set reference state temperature                 = 1928
      set temperature-driven surface tension gradient = -5.5e-4
      set liquidus temperature                        = 1928
      set solidus temperature                         = 1878
    end
  end
end

#---------------------------------------------------
# Laser parameters
#---------------------------------------------------

subsection laser parameters
  set enable            = true
  set power             = 156e6 # M*L^2*T^-3
  set absorptivity      = 0.35
  set penetration depth = 0.0
  set beam radius       = 0.07 # L
  set end time          = 0.002
  set beam orientation  = y-
  subsection path
    set Function expression = 0.3; 0.43
  end
end

#---------------------------------------------------
# VOF
#---------------------------------------------------

subsection VOF
  subsection phase filtration
    set type = tanh
  end
  subsection interface regularization method
    set type = projection-based interface sharpening
    subsection projection-based interface sharpening
      set interface sharpness     = 1.5
      set type                    = adaptive
      set threshold max deviation = 0.4
      set max iterations          = 50
      set tolerance               = 1e-7
    end
  end
  subsection surface tension force
    set enable                  = true
    set output auxiliary fields = true
    set enable marangoni effect = true
  end
end

#---------------------------------------------------
# Evaporation
#---------------------------------------------------

subsection evaporation
  set evaporation mass flux model = temperature_dependent
  set enable evaporative cooling  = true
  set enable recoil pressure      = true
  set evaporation latent heat     = 8.9e12
  set molar mass                  = 4.58e-2
  set boiling temperature         = 3550
  set ambient pressure            = 101325e-3
  set liquid density              = 4420.0e-9
  set universal gas constant      = 8.314e6
end

#---------------------------------------------------
# Post-processing
#---------------------------------------------------

subsection post-processing
  set calculate mass conservation      = true
  set calculate temperature statistics = true
  set verbosity                        = verbose
end

#---------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  subsection fluid dynamics
    set tolerance      = 1e-4
    set max iterations = 20
    set verbosity      = quiet
  end
  subsection heat transfer
    set tolerance      = 100
    set max iterations = 20
    set verbosity      = quiet
  end
  subsection VOF
    set tolerance      = 1e-4
    set max iterations = 20
    set verbosity      = quiet
  end
end

#---------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  subsection fluid dynamics
    set verbosity               = quiet
    set minimum residual        = 1e-5
    set ilu preconditioner fill = 1
  end
  subsection heat transfer
    set verbosity               = quiet
    set relative residual       = 1e-2
    set minimum residual        = 1e-1
    set ilu preconditioner fill = 1
  end
  subsection VOF
    set verbosity               = quiet
    set minimum residual        = 1e-5
    set ilu preconditioner fill = 1
  end
end

#---------------------------------------------------
# Restart
#---------------------------------------------------

subsection restart
  set restart = true
end
