# Listing of Parameters
# ---------------------
# --------------------------------------------------
# Simulation and IO Control
#---------------------------------------------------
subsection simulation control
  set time step                 			 = 1e-5
  set step end       					 = 2e5
  set n total              				 = 1000
  set write frequency            			 = 100
end


# --------------------------------------------------
# Model parameters
#---------------------------------------------------
subsection model parameters
  set pp_broad_search_frequency                 	 = 10
  set pw_broad_search_frequency      			 = 10
  set pp_contact_force_method                   	 = pp_nonlinear
  set pw_contact_force_method                   	 = pw_nonlinear
  set print_info_frequency				 = 1000
end

#---------------------------------------------------
# Physical Properties
#---------------------------------------------------
subsection physical properties
    set gx            		 			= 0.0
    set gy            		 			= 0.0
    set gz            		 			= -9.81
    set diameter            	 			= 0.005
    set density            	 			= 2000
    set Youngs_modulus_particle         		= 1e6
    set Youngs_modulus_wall            			= 1e6
    set Poisson_ratio_particle          		= 0.3
    set Poisson_ratio_wall            			= 0.3
    set restitution_coefficient_particle		= 0.95
    set restitution_coefficient_wall           		= 0.95
    set friction_coefficient_particle         		= 0.05
    set friction_coefficient_wall         		= 0.05
    set rolling_friction_particle         		= 0.1
    set rolling_friction_wall         	      	  	= 0.1
end

#---------------------------------------------------
# Insertion Info
#---------------------------------------------------
subsection insertion info
    set Insertion time step           		 	= 5e4
    set Inserted number of particles at each time step  = 1000
    set Insertion frequency            		 	= 2000
    set Insertion box minimum x            	 	= -0.05
    set Insertion box minimum y            	        = -0.05
    set Insertion box minimum z            	        = -0.03
    set Insertion box maximum x            	        = 0.05
    set Insertion box maximum y           	 	= 0.05
    set Insertion box maximum z            	        = 0.07
    set Insertion distance threshold			= 2
    set Insertion random number range			= 0.75
end

#---------------------------------------------------
# Properties of particles (for visualization)
#---------------------------------------------------
subsection output properties
    set Number of properties           		 	= 21
    set Output directory				= results
    set General information file prefix                 = Globals
    set Result name prefix                              = Output

end

#---------------------------------------------------
# Mesh
#---------------------------------------------------
subsection mesh
    set type                 = dealii
    set grid type            = hyper_cube
    set grid arguments       = -0.07 : 0.07 : true
    set initial refinement   = 5
end
