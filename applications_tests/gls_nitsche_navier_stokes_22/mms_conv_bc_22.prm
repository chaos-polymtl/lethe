# Listing of Parameters
# ---------------------


# --------------------------------------------------
# Simulation Control
#---------------------------------------------------
subsection simulation control
  set method                  = steady
  set number mesh adapt       = 2
  set output frequency        = 1
  set output name             = mms_conv_22
end
#---------------------------------------------------
# FEM
#---------------------------------------------------
subsection FEM
    set velocity order        = 2
    set pressure order        = 1
end
#---------------------------------------------------
# Timer
#---------------------------------------------------
subsection timer
    set type    = none                                  # <none|iteration|end>
end

#---------------------------------------------------
# Initial condition
#---------------------------------------------------
subsection initial conditions
    set type = nodal
    subsection uvwp
            set Function expression = 0; 0; 0
    end
end
#---------------------------------------------------
# Physical Properties
#---------------------------------------------------
subsection physical properties
    set kinematic viscosity            = 1.0
end
#---------------------------------------------------
# Mesh
#---------------------------------------------------
subsection mesh
        set type = dealii
        set grid type = hyper_rectangle
        set grid arguments = 0, 0 : 1, 1 : true
        set initial refinement = 2
end
#---------------------------------------------------
# Multiphysics
#---------------------------------------------------
subsection multiphysics
    set heat transfer = true
end
#---------------------------------------------------
# Nitsche
#---------------------------------------------------
subsection nitsche
    subsection mesh
        set type = dealii
        set grid type = hyper_rectangle
        set grid arguments = 0, 0 : 1, 0.1 : true
        set initial refinement = 5
    end
    
    set beta = 0

end
# --------------------------------------------------
# Mesh Adaptation Control
#---------------------------------------------------
subsection mesh adaptation
  set type                    = uniform
end
# --------------------------------------------------
# Boundary Conditions
#---------------------------------------------------
subsection boundary conditions
  set number                  = 4
end

subsection boundary conditions heat transfer
  set number                  = 4
    subsection bc 0
    set id = 0
	set type	      = temperature
        set value	      = 0
    end
    subsection bc 1
    set id = 1
	set type	      = convection
        set value	      = 10
        set Tenv	      = 10
    end
    subsection bc 2
    set id = 2
	set type	      = temperature
        set value	      = 0
    end
    subsection bc 3
    set id = 3
	set type	      = temperature
        set value	      = 0
    end
end
# --------------------------------------------------
# Source term
#---------------------------------------------------
subsection source term
  set enable                 = false
    subsection xyz
            set Function expression = if(y >= 0., 1, 0) ; 0 ; 0
    end
end
# --------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------
subsection non-linear solver
  set verbosity               = verbose
  set tolerance               = 1e-12
  set max iterations          = 5
end
# --------------------------------------------------
# Linear Solver Control
#---------------------------------------------------
subsection linear solver
  set verbosity               = verbose
  set method                  = gmres
  set max iters               = 5000
  set relative residual       = 1e-4
  set minimum residual        = 1e-13
  set ilu preconditioner fill = 2
  set ilu preconditioner absolute tolerance = 1e-14
  set ilu preconditioner relative tolerance = 1.00
end

