# Listing of Parameters
# ---------------------
# --------------------------------------------------
# Simulation and IO Control
#---------------------------------------------------

subsection simulation control
  set method            = steady
  set number mesh adapt = 1
  set output name       = mms3d_isothermal_compressible
  set output frequency  = 0
end

#---------------------------------------------------
# Physical Properties
#---------------------------------------------------

subsection physical properties
  set number of fluids = 1
  subsection fluid 0
    set kinematic viscosity = 1.000
    set density model       = isothermal_ideal_gas
  end
end

#---------------------------------------------------
# Mesh
#---------------------------------------------------

subsection mesh
  set type               = dealii
  set grid type          = hyper_cube
  set grid arguments     = -1 : 1 : false
  set initial refinement = 3
end

# --------------------------------------------------
# Boundary Conditions
#---------------------------------------------------

subsection boundary conditions
  set number = 1
  subsection bc 0
    set type = noslip
  end
end

# --------------------------------------------------
# Source term
#---------------------------------------------------

subsection source term
  set enable = true
  subsection xyz
    set Function constants  = nu=1
    set Function expression = pi*(2*nu*pi*(2 - 3*cos(2*pi*x))*cos(pi*y)*cos(pi*z) + cos(pi*x))*sin(pi*y)*sin(pi*z) + pi*(2*cos(pi*y)^2 - cos(pi*z)^2)*sin(pi*x)^3*sin(pi*y)^2*sin(pi*z)^2*cos(pi*x); pi*(2*nu*pi*(2 - 3*cos(2*pi*y))*cos(pi*x)*cos(pi*z) + cos(pi*y))*sin(pi*x)*sin(pi*z) + pi*(2*cos(pi*x)^2 - cos(pi*z)^2)*sin(pi*x)^2*sin(pi*y)^3*sin(pi*z)^2*cos(pi*y); pi*(-4*nu*pi*(2 - 3*cos(2*pi*z))*cos(pi*x)*cos(pi*y) + cos(pi*z))*sin(pi*x)*sin(pi*y) + 2*pi*(cos(pi*x)^2 + cos(pi*y)^2)*sin(pi*x)^2*sin(pi*y)^2*sin(pi*z)^3*cos(pi*z); 0
  end
end

# --------------------------------------------------
# Analytical Solution
#---------------------------------------------------

subsection analytical solution
  set enable = true
  subsection uvwp
    set Function expression = sin(pi*x)*sin(pi*x)*cos(pi*y)*sin(pi*y)*cos(pi*z)*sin(pi*z); cos(pi*x)*sin(pi*x)*sin(pi*y)*sin(pi*y)*cos(pi*z)*sin(pi*z); -2*cos(pi*x)*sin(pi*x)*cos(pi*y)*sin(pi*y)*sin(pi*z)*sin(pi*z); sin(pi*x)*sin(pi*y)*sin(pi*z)
  end
end

# --------------------------------------------------
# Mesh Adaptation Control
#---------------------------------------------------

subsection mesh adaptation
  set type                 = uniform
  set max number elements  = 20000
  set max refinement level = 3
  set min refinement level = 0
  set frequency            = 1
  set fraction refinement  = 0.1
  set fraction coarsening  = 0.1
end

# --------------------------------------------------
# Non-Linear Solver Control
#---------------------------------------------------

subsection non-linear solver
  set tolerance          = 1e-8
  set max iterations     = 10
  set residual precision = 2
  set verbosity          = quiet
end

# --------------------------------------------------
# Linear Solver Control
#---------------------------------------------------

subsection linear solver
  set method                                    = amg
  set max iters                                 = 5000
  set relative residual                         = 1e-4
  set minimum residual                          = 1e-9
  set amg preconditioner ilu fill               = 0
  set amg preconditioner ilu absolute tolerance = 1e-10
  set amg preconditioner ilu relative tolerance = 1.00
  set amg aggregation threshold                 = 1e-12
  set amg n cycles                              = 1
  set amg w cycles                              = false
  set amg smoother sweeps                       = 2
  set amg smoother overlap                      = 1
  set verbosity                                 = quiet
end
